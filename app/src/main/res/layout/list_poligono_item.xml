<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:paddingBottom="20dp"
    >

    <TextView
        android:id="@+id/textLongitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitud : "
        android:textColor="#E4D7D7"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longitudPoligono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="#E4D7D7"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textLongitud"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLatitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Longitud : "
        android:textColor="#E4D7D7"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/longitudPoligono"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latitudPoligono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="#E4D7D7"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textLatitud"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>